@model IEnumerable<woontest.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Катигории</h2>

<p>
    @Html.ActionLink("Добавить катигорию", "Create")
</p>
@using (@Html.BeginForm(new { enctype = "multipart/form-data" }))
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MimeTypeCateg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCategory)
        </td>
        <td>
            @if (item.PictureCategory != null)
            {
            <img width="150" height="150" src="data:image/gif;base64, @Convert.ToBase64String(item.PictureCategory)" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MimeTypeCateg)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
}