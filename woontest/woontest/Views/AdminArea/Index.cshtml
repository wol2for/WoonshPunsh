    ViewBag.Title = "Admin Area";
}
<h2>Admin Area</h2>
<div id="loading" style="display:none; color:Red; font-weight:bold;">
    <p>Идет загрузка...</p>
</div>
<ul class="nav nav-tabs">
    <li class="active">
            @using (Ajax.BeginForm("Index", "Category", new AjaxOptions { UpdateTargetId = "table", LoadingElementId = "loading" }))
