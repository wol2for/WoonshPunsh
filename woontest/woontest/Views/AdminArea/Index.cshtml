    </li>
    <li style=" margin-left: 20px; ">
        @using (Ajax.BeginForm("Index", "PictureProducts", new AjaxOptions { UpdateTargetId = "table", LoadingElementId = "loading" }))
        {
            <input class="btn btn-primary" type="submit" value="Рисунки к товарам" />
        }

    </li>
    <li style=" margin-left: 20px; ">
        @using (Ajax.BeginForm("Index", "Comments", new AjaxOptions { UpdateTargetId = "table", LoadingElementId = "loading" }))
