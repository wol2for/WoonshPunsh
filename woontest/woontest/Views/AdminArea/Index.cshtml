                <input class="btn btn-primary" type="submit" value="Катигории" />
            }

    </li>
    <li style=" margin-left: 20px; ">
        @using (Ajax.BeginForm("Index", "Products", new AjaxOptions { UpdateTargetId = "table", LoadingElementId = "loading" }))
