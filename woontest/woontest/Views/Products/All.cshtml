@model List<woontest.Models.Product>
@using woontest.Models;
@{
    ViewBag.Title = "Все товары";
}


<div class="space-17"></div>
<h1 class="textTitel">Все товары</h1>

<div class="row">
    @foreach (Product item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail" style="padding:initial">
                <a href="@Url.Action("Redict", "Products", new { id = item.Id })" class="notDecorationForLink">
                    <div class="image-box">
                        <img src="@Url.Action("GetImage", "Products", new { productId = item.Id })" class="img-responsive" alt="Lights" style="width:100%">
                        <div class="img-optical"></div>
                    </div>
                    <div class="caption textproduct">
                        <p>@Html.DisplayFor(modelItem => item.NameProduct)</p>
                    </div>
                </a>
            </div>
        </div>
    }


    

<div id="AddnewItem"></div>
</div>


@using (Ajax.BeginForm("AddProductToAllList", new AjaxOptions { UpdateTargetId = "AddnewItem", InsertionMode = InsertionMode.InsertAfter }))
{
    <div class="row">
        <div align="center" class="col-md-offset-4 col-md-4">
            <input type="submit" align="center" class="btn btn-lg btn-block textproduct bg-color-yellow" value="Еще товары">
        </div>
    </div>
}
