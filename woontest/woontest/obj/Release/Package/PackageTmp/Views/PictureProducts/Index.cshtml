@model IEnumerable<woontest.Models.PictureProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Картинки продуктов</h2>

<p>
    @Html.ActionLink("Добавить картинку к продокту", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.NameProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MimeTypeProduct)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.NameProduct)
        </td>
        <td>
            <img width="150" height="150" src="@Url.Action("GetImage", "PictureProducts", new { PictureOfProductId = item.Id })" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MimeTypeProduct)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
