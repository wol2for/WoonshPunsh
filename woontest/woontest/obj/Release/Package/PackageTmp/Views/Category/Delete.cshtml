@model woontest.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NameCategory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCategory)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PictureCategory)
        </dt>

        <dd>
            <img width="250" height="250" src="data:image/gif;base64, @Convert.ToBase64String(Model.PictureCategory) " alt="Responsive image" style="width:auto">
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Products)
        </dt>

        <dd>
            @foreach (var item in Model.Products)
            {
               <p>@Html.DisplayFor(model => item.NameProduct)</p> 
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
